<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:paddingBottom="10sp"
		android:paddingLeft="5sp"
		android:paddingRight="5sp"
		android:paddingTop="7sp">
		
	   <ImageView
	   		android:src="@drawable/sad_panda"
	   		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:layout_gravity="center_vertical"/>
	  		
		<TextView android:id="@+id/causeText"
			android:text="..."
			android:textSize="18sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="7sp"/>
		
	</LinearLayout>
	
 	<TextView android:id="@+id/pleaseText"
 		android:text="@string/please_report"
 		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="4px"/>

 	<TextView android:id="@+id/report" 
 		android:background="@drawable/error_report_frame"
 		android:layout_width="fill_parent"
  		android:layout_height="0dip"
  		android:layout_weight="1"
  		android:typeface="monospace"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		 
	 	<Button android:id="@+id/send" 
	 		android:text="@string/send_report"
	 		android:layout_weight="1"
	 		android:layout_width="0dip"
	  		android:layout_height="fill_parent"/>

	 	<Button android:id="@+id/close" 
	 		android:text="@string/dismiss"
	 		android:layout_weight="1"
	 		android:layout_width="0dip"
	  		android:layout_height="fill_parent"/>
	  		
	</LinearLayout>

</LinearLayout>
