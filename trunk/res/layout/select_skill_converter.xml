<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/FlippingPage">
        
	<ViewFlipper android:id="@+id/converterFlipper"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:inAnimation="@anim/push_left_in"
	    android:outAnimation="@anim/push_left_out">

	    <org.tof.ui.FTextView android:id="@+id/converterHead"
	    	style="@style/HeadText"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="top"
	    	android:text="@string/converting_song_fmt"/>
  
	    <org.tof.ui.FireButton android:id="@+id/converterPlay"
	       	style="@style/FireButton"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="top|center_horizontal"
	    	android:text="Play"/>
	    
    </ViewFlipper>

    <TextView
    	style="@style/ParagraphText"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/converting_song_text"/>
    
</LinearLayout>
